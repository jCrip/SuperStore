<div class="row">
  <%= form_for [:admin, @product], html: {class: 'col-md-6'} do |f| %>
  <% if @product.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

    <ul>
      <% @product.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'Categoria' %><br>
    <%= f.collection_select :category_id, Category.all, :id, :name, {prompt: 'Elije una Categoria'}, {class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, rows: 10, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :price %><br>
    <%= f.text_field :price, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :stock %><br>
    <%= f.number_field :stock, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :address %><br />
    <%= f.text_field :address, class: 'form-control js-address' %>
  </div>

  <div class="form-group">
    <%= f.label :latitude %><br />
    <%= f.text_field :latitude, class: 'form-control js-latitude' %>
  </div>

  <div class="form-group">
    <%= f.label :longitude %><br />
    <%= f.text_field :longitude, class: 'form-control js-longitude' %>
  </div>

  <div class="form-group">
    <p>
      <%= image_tag(@product.image.thumb.url, class: 'img-thumbnail') if @product.image? %>
      <% if @product.image? %>
      <label>
        <%= f.check_box :remove_image %>
        Remove Image
      </label>
      <% end %>
    </p>
    <%= f.hidden_field :image_cache %>
    <div class="input-group">
      <span class="input-group-btn">
        <span class="btn btn-primary btn-file">
          Browse&hellip; <%= f.file_field :image %>
        </span>
      </span>
      <input type="text" class="form-control" readonly>
    </div>
  </div>
  <div class="actions">
    <%= f.button class: 'btn btn-success' do %>
    Guardar
    <span class="glyphicon glyphicon-saved"></span>
    <% end %>
  </div>
  <% end %>
</div>
