<h2 class="display-4 m-t-1 m-b-1">Sign up</h2>
<div class="row">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'col-md-4' }) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :lastname %><br />
      <%= f.text_field :lastname, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :username %><br />
      <%= f.text_field :username, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :address %><br />
      <%= f.text_field :address, class: 'form-control js-address' %>
      <button class="btn btn-primary m-t-1 js-getlocation">GetLocation</button>
    </div>

    <div class="form-group">
      <%= f.label :latitude %><br />
      <%= f.text_field :latitude, class: 'form-control js-latitude' %>
    </div>

    <div class="form-group">
      <%= f.label :longitude %><br />
      <%= f.text_field :longitude, class: 'form-control js-longitude' %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off" , class: 'form-control'%>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
    </div>

    <div class="actions">
      <%= f.button class: 'btn btn-success' do %>
          Registrarse
          <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
          <% end %>
    </div>
  <% end %>

  <div class="col-md-6 col-md-offset-1">
    <!-- map -->

    <div id="map" class="gmap m-t-1"></div>

    <!-- /map -->

  </div>
</div>

<hr>

<div class="row">
  <div class="col-md-6">
    <%= render "devise/shared/links" %>
  </div>
</div>

