<nav class="navbar navbar-dark bg-inverse">
  <div class="container">
    <a class="navbar-brand" href="#">SuperStore</a>
    <ul class="nav navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
      </li>
      <% if user_signed_in? && current_user.admin? %>
        <li class="nav-item">
          <%= link_to 'Admin', admin_path, class: 'nav-link', data: { no_turbolink: true } %>
        </li>
      <% end %>
    </ul>
    <ul class="nav navbar-nav pull-right">
      <% unless user_signed_in? %>

      <li class="nav-item">
        <%= link_to new_user_session_path, class: 'nav-link' do %>
        Ingresar
        <span class="icon-login" aria-hidden="true"></span>
        <% end %>
      </li>

      <li class="nav-item">
        <%= link_to new_user_registration_path, class: 'nav-link' do %>
        Registrarse
        <span class="icon-add-user" aria-hidden="true"></span>
        <% end %>
      </li>

      <% else %>

      <li class="nav-item">
        <%= link_to edit_user_registration_path, class: 'nav-link' do %>
        <%= current_user %>
        <span class="icon-user" aria-hidden="true"></span>
        <% end %>
      </li>

      <li class="nav-item">
        <%= link_to cart_path, class: 'nav-link  js-cart' do %>
        <span class="icon-cart" aria-hidden="true"></span>
        <span class="js-cart-count"><%= current_user.carts.count %></span>
        <% end %>
      </li>

      <li class="nav-item">
        <%= link_to destroy_user_session_path, method: :delete, data: { confirm: "Seguro que desea salir?" }, class: 'nav-link' do %>
        Salir
        <span class="icon-logout" aria-hidden="true"></span>
        <% end %>
      </li>
      <% end %>
    </ul>
    <div class="form-inline navbar-form pull-right m-r-md">
    <div class="form-group">
      <%= text_field_tag :q, nil, placeholder: 'Burcar', class: 'form-control', 'data-behavior': 'search-products' %>
    </div>
    </div>
  </div>
</nav>