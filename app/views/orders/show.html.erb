<h2 class="display-4 m-t-1 m-b-1">Orden de Compra</h2>

<hr>

<table class="table table-striped">
  <thead class="thead-inverse">
    <tr>
      <th class="text-md-center">#</th>
      <th></th>
      <th>Producto</th>
      <th class="text-md-center">Cantidad</th>
      <th class="text-md-right">Price</th>
      <th class="text-md-right">Subtotal</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <%= render partial: 'order', collection: @product_orders %>
    </tr>
  	<tr class="table-footer">
  		<td colspan="4" class="text-md-right text-uppercase lead"><strong>Total:</strong></td>
  		<td class="text-md-right"><strong class="lead"><%= number_to_currency @product_orders.total %></strong></td>
  		<td class="text-md-center"><%= link_to 'Pagar', paid_order_path(@order), method: :post, class: 'btn btn-success' unless @order.paid? %></td>
  	</tr>
  </tbody>
</table>

<hr>