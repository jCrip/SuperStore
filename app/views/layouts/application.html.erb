<!DOCTYPE html>
<html>
<head>
  <title>
  	<%= if content_for?(:title) then yield(:title) + ' | ' end %>
  	My Awesome Ecommerce
  </title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <meta name='description' content='<%= yield_meta_tag(:description, 'Default description') %>' />
  <meta name='keywords' content='<%= yield_meta_tag(:keywords, 'defaults,ruby,rails') %>' />

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <%= javascript_include_tag "http://maps.google.com/maps/api/js?v=3.18&sensor=false&client=&key=&libraries=geometry&language=&hl=&region=" %>
  <%= javascript_include_tag "http://google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" %>
  <%= javascript_include_tag "http://google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js" %>

  <%= csrf_meta_tags %>

</head>
<body class="<%= controller_name %> <%= action_name %>">

	<%= render 'shared/navbar' %>
  <% flash.notice = "Post successfully created" %>
	<div class="js-flash">
		<%= flash_messages %>
	</div>

	<div class="container">
		<%= yield %>
	</div>

	<%= render 'shared/footer' %>

</body>
</html>
